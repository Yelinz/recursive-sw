<div class="filter-content">
{{#each-in filterCategorys as |name filters|}}
  <div class="filter-category">
    <p>{{name}}</p>
    {{#if (neq name "Numeric")}}
      <div class="filter-checkboxes">
      {{#each filters as |filter|}}
        <label>
          <input type="checkbox" onclick={{action "toggleFilter" filter}} checked={{in-array queryParameter filter}}/>
          {{filter}}
        </label>
      {{/each}}
      </div>
    {{else}}
      <div class="filter-inputs">
        {{#each filters as |filter|}}
          <div class="filter-input">
            <p>{{filter.name}}:</p>
            <select onchange={{action 'selectType' value="target.value"}}>
              {{#if (eq filter.type 'gt')}}
                <option value="{{filter.name}}-gt" selected>&gt;</option>
                <option value="{{filter.name}}-eq">=</option>
                <option value="{{filter.name}}-lt">&lt;</option>
              {{else if (eq filter.type 'eq')}}
                <option value="{{filter.name}}-gt">&gt;</option>
                <option value="{{filter.name}}-eq" selected>=</option>
                <option value="{{filter.name}}-lt">&lt;</option>
              {{else}}
                <option value="{{filter.name}}-gt">&gt;</option>
                <option value="{{filter.name}}-eq">=</option>
                <option value="{{filter.name}}-lt" selected>&lt;</option>
              {{/if}}
            </select>
            {{input type="number" min=0 value=filter.value input=(action "valChange" (to-lowercase filter.name) filter.value)}}
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>
{{/each-in}}
</div>
