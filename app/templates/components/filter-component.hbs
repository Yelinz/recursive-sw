<div class="filter-content">
{{#each-in filterCategorys as |name filters|}}
  <div class="filter-category">
    <p>{{name}}</p>
    <div class="filter-checkboxes">
    {{#each filters as |filter|}}
      <label>
        <input type="checkbox" onclick={{action 'toggleFilter' filter}} checked={{filter.checked}}/>
        {{filter}}
      </label>
    {{/each}}
    </div>
  </div>
{{/each-in}}
</div>
