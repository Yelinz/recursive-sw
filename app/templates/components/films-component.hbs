<div class="section-content">
{{#each films as |film|}}
{{#link-to "films" film.id}}
<div class="card film">
  <ul>
    <lh>{{film.title}}</lh>
    <li>Episode {{film.episode_id}}</li>
    <li>
      <details>
        <summary>Opening Text</summary>
        {{film.opening_crawl}}
      </details>
    </li>
    <li>Director: {{film.director}}</li>
    <li>Producer: {{film.producer}}</li>
    <li>Release Date: {{film.release_date}}</li>
  </ul>
</div>
{{/link-to}}
{{else}}No Films{{/each}}
</div>
